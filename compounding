// Coding Start 
// 1st trade
let return1 = invest1 + (invest1 * return_in_per1) / 100;
return1 = Number(return1).toFixed(2);
if (direction1 == "down") {
  let invest_a_1 = document.getElementsByClassName(
    "trades-list-item__delta"
  )[4];
  invest_a_1.innerHTML =
    '<svg class="icon-arrow-down-circle"><use xlink:href="/profile/images/spritemap.svg#icon-arrow-down-circle"></use></svg>' +
    invest1 +" "+
    '$<div class="trades-list-item__delta-right trades-list-item__delta--down" id="rfirt_01">+' +
    return1 +" "+
    "$</div>";
} else {
  let invest_a_1 = document.getElementsByClassName(
    "trades-list-item__delta"
  )[4];
  invest_a_1.innerHTML =
    '<svg class="icon-arrow-up-circle"><use xlink:href="/profile/images/spritemap.svg#icon-arrow-up-circle"></use></svg>' +
    invest1 +" "+
    '$<div class="trades-list-item__delta-right trades-list-item__delta--up" id="rfirt_01">+' +
    return1 +" "+
    "$</div>";
}

if (direction1 == "down") {
  let elmf1 = document.getElementsByClassName(
    "trades-list-item__delta trades-list-item__delta--up"
  )[4];
  elmf1.setAttribute("id", "firt_01");
  let elm1i = document.getElementById("firt_01");
  elm1i.classList.add("trades-list-item__delta--down");
  elm1i.classList.remove("trades-list-item__delta--up");
}
if (your_resalt1 == "loss") {
  let relmf1 = document.getElementsByClassName(
    "trades-list-item__delta-right"
  )[4];
  relmf1.setAttribute("id", "rfirt_01");
  relmf1.classList.add("trades-list-item__delta--up");
  relmf1.classList.remove("trades-list-item__delta--down");
}

