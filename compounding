
// input Note :- Take all trade up with rule for compounding trade

// input your data 

// 1st trade
let invest1 = 5;   //invest amount 
let return_in_per1 = 90;   // % return
let direction1 = "up";  //trade direction for profit
let your_resalt1 = "losss";  //Your result (loss or profit)

// 2nd trade
let invest2 = 9;  //invest amount
let return_in_per2 = 90;  // % return
let direction2 = "down";  //trade direction for profit
let your_resalt2 = "loss"; //Your result (loss or profit)

// 3rd trade
let invest3 = 17;  //invest amount
let return_in_per3 = 90;  // % return
let direction3 = "up";  //trade direction for profit
let your_resalt3 = "loss"; //Your result (loss or profit)

// 4th trade
let invest4 = 32;  //invest amount
let return_in_per4 = 90;  // % return
let direction4 = "down";  //trade direction for profit
let your_resalt4 = "loss"; //Your result (loss or profit)

// 5st trade
let invest5 = 60;  //invest amount
